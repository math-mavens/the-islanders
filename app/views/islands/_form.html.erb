 <%= simple_form_for @island do |f| %>
      <%= f.input :name, placeholder: "Write your Island's Name" %>
      <%= f.input :address,
                  input_html: {data: {address_autocomplete_target: "address"}},
                  wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}, placeholder: "Write your Island's address here" %>
      <%= f.input :price_per_day, placeholder: "State your rate" %>
      <%= f.input :description, placeholder: "Write your Island's description here" %>
      <%= f.submit "Confirm", class: "btn btn-primary" %>
  <% end %>
